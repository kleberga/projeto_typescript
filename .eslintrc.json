{
    "env":{
        "es2021": true,
        "node": true
    },
    "extends": [
        "standard"
    ],
    "include": ["./src/**/*.ts", "./src/**/*.js", "src/**/__tests__/**/*.ts"],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 15,
        "sourceType": "module",
        "project": [
            "./tsconfig.json"
        ]
    },
    "plugins":[
        "@typescript-eslint"
    ],
    "rules": {
        "@typescript-eslint/no-explicit-any": "off",
        "@typescript-eslint/semi": "off",
        "semi": [2,"always"]
    }
}